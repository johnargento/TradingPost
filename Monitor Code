--This is a code for my monitor
--It is meant for the customer to be guided into the right place
mon = peripheral.wrap("right")
mon.clear()
mon.setTextColor(colors.white)
mon.setTextScale(1)
mon.setCursorPos(2,2)
mon.write("WELCOME TO THE TRADING POST")
 
mon.setTextScale(1)
mon.setCursorPos(1,4)
mon.setTextColor(colors.white)
mon.write("If you would like:")
 
--This is indicating that "food" is on computer 1
mon.setTextScale(1)
mon.setCursorPos(1,5)
mon.setTextColor(colors.purple)
mon.write("-FOOD, then see comp. #1")
 
--This is indicating that "valuables" is on computer 2
mon.setTextScale(1)
mon.setCursorPos(1,6)
mon.setTextColor(colors.purple)
mon.write("-VALUABLES, then see comp. #2")
 
--This is indicating that "wood" is on computer 3
mon.setTextScale(1)
mon.setCursorPos(1,7)
mon.setTextColor(colors.purple)
mon.write("-WOOD, then see comp. #3")
 
--This is indicating that "blocks" is on computer 4
mon.setTextScale(1)
mon.setCursorPos(1,8)
mon.setTextColor(colors.purple)
mon.write("-BLOCKS, then see comp. #4")
 
--This is indicating that "wool" is on computer 5
mon.setTextScale(1)
mon.setCursorPos(1,9)
mon.setTextColor(colors.purple)
mon.write("-WOOL, then see comp. #5")
 
--This is indicating that "utilities" is on computer 6
mon.setTextScale(1)
mon.setCursorPos(1,10)
mon.setTextColor(colors.purple)
mon.write("-UTILITIES, then see comp. #6")
 
mon.setCursorPos(3,12)
mon.setTextColor(colors.white)
mon.write("Enter *ls startup* on any")
 
mon.setCursorPos(3,13)
mon.setTextColor(colors.white)
mon.write("computer to start trading!")
