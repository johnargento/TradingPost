function diamonds()
  for x = 1, 9 do
    turtle.suck()
  end
  for b = 1, 16 do
    if turtle.detect() == "minecraft:diamond" then
      turtle.select( 1 )
      turtle.drop()
  end
end
end
 
function emerald()
